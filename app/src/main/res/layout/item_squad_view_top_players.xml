<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_24"
    android:paddingVertical="@dimen/spacing_14">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cup_circle" />

    <TextView
        android:id="@+id/viewTopPlayersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:paddingHorizontal="@dimen/spacing_12"
        android:textAllCaps="true"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/text_size_12"
        tools:text="View top players" />

</LinearLayout>
